<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="serialport-plugin"
        version="0.0.1">

  <name>Hello</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/hello.js" target="js/hello.js"/>

  <js-module src="www/hello.js" name="hello">
    <clobbers target="hello" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Hello">
        <param name="android-package" value="serialport.Hello"/>
      </feature>
    </config-file>

    <source-file src="src/android/Hello.java" target-dir="src/serialport"/>
    <source-file src="src/android/SerialPort.java" target-dir="src/serialport"/>
    <source-file src="src/android/SerialPortFinder.java" target-dir="src/serialport"/>
    <source-file src="libs/armeabi/libserial_port.so" target-dir="libs/armeabi"/>
    <source-file src="libs/armeabi-v7a/libserial_port.so" target-dir="libs/armeabi-v7a"/>
    <source-file src="libs/x86/libserial_port.so" target-dir="libs/x86"/>
    <source-file src="jni/Android.mk" target-dir="jni"/>
    <source-file src="jni/Application.mk" target-dir="jni"/>
    <source-file src="jni/SerialPort.c" target-dir="jni"/>
    <source-file src="jni/SerialPort.h" target-dir="jni"/>
    <source-file src="jni/gen_SerialPort_h.sh" target-dir="jni"/>

  </platform>

</plugin>